<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.agechecker.FormController" alignment="CENTER" hgap="10" vgap="10">
    <Label text="Name:"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1" />

    <Label text="Age:" GridPane.rowIndex="1" />
    <TextField fx:id="ageField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Button text="Submit" onAction="#onSubmitButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
</GridPane>
